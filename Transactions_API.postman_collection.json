{
  "info": {
    "name": "Transactions API",
    "description": "API REST para manejo de transacciones con Node.js, Express y TypeScript",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan Pérez\",\n  \"email\": \"juan@example.com\",\n  \"balance\": 100000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users"]
            }
          }
        },
        {
          "name": "Create User 2",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"María García\",\n  \"email\": \"maria@example.com\",\n  \"balance\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Create Small Transaction (Auto-confirmed)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromUserId\": \"{{userId1}}\",\n  \"toUserId\": \"{{userId2}}\",\n  \"amount\": 25000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions"]
            }
          }
        },
        {
          "name": "Create Large Transaction (Pending)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromUserId\": \"{{userId1}}\",\n  \"toUserId\": \"{{userId2}}\",\n  \"amount\": 75000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions"]
            }
          }
        },
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions"]
            }
          }
        },
        {
          "name": "Get Transactions by User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions?userId={{userId1}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId1}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions/{{transactionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions", "{{transactionId}}"]
            }
          }
        },
        {
          "name": "Approve Transaction",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions/{{transactionId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions", "{{transactionId}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Transaction",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/transactions/{{transactionId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transactions", "{{transactionId}}", "reject"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "userId1",
      "value": "REPLACE_WITH_ACTUAL_USER_ID_1"
    },
    {
      "key": "userId2",
      "value": "REPLACE_WITH_ACTUAL_USER_ID_2"
    },
    {
      "key": "transactionId",
      "value": "REPLACE_WITH_ACTUAL_TRANSACTION_ID"
    }
  ]
}
